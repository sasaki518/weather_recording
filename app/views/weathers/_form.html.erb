<h5>天気の記録<%= type %></h5>

<%= form_with model: weather, local: true, method: method do |f| %>

<div class="form-group">
    <label>月日</label>
  <%= f.text_field :day, class: "form-control" %>
</div>

<div class="form-group">
    <label>天気</label>
    <%= f.select :weather, ['晴れ', '曇り', '雨', '雪'], {include_blank: '選択ボックス'}, class: 'form-select' %>
</div>

<div class="form-group">
<label>気温</label>
<%= f.number_field :temperture, class: 'form-control' %>
</div>

<div class="form-group">
    <label>降水確率</label>
    <%= f.number_field :rainy_percent, class: 'form-control' %>
</div>

<%= f.submit "記録", class: "btn btn-primary" %>
<%= link_to "戻る", weathers_path, class: "btn btn-secondary" %>

<% end %>